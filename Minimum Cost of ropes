class Solution {
    public long minCost(long[] arr) {
        PriorityQueue<Long> pq = new PriorityQueue<>();
        for (long rope : arr) {
            pq.add(rope);
        }
        long totalCost = 0;
        while (pq.size() > 1) {
            long first = pq.poll();
            long second = pq.poll();
            long cost = first + second;
            totalCost += cost;
            pq.add(cost);
        }
        return totalCost;
    }
}
